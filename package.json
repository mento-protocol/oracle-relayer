{
  "name": "oracle-relayer",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "author": "Mento Labs <eng@mentolabs.xyz>",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "cache:clear": "./set-project-vars.sh --invalidate-cache",
    "deploy:function:prod": "./deploy-via-gcloud.sh prod",
    "deploy:function:staging": "./deploy-via-gcloud.sh staging",
    "deploy:prod": "terraform -chdir=infra workspace select prod && terraform -chdir=infra apply",
    "deploy:staging": "terraform -chdir=infra workspace select staging && terraform -chdir=infra apply",
    "destroy:prod": "terraform -chdir=infra workspace select prod && terraform -chdir=infra destroy",
    "destroy:staging": "./destroy-project.sh staging",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'npm run build && npm run start'",
    "gcp-build": "npm run build",
    "generate:env": "terraform -chdir=infra apply -target=local_file.env_file",
    "logs": "npm run logs:function:staging",
    "logs:function:prod": "./get-function-logs.sh prod",
    "logs:function:staging": "./get-function-logs.sh staging",
    "logs:function:url": "./get-function-logs-url.sh",
    "logs:jobs": "./get-job-logs.sh",
    "logs:jobs:url": "./get-job-logs-url.sh",
    "logs:prod": "npm run logs:function:prod",
    "logs:staging": "npm run logs:function:staging",
    "logs:url": "npm run logs:function:url",
    "plan:prod": "terraform -chdir=infra workspace select prod && terraform -chdir=infra plan",
    "plan:staging": "terraform -chdir=infra workspace select staging && terraform -chdir=infra plan",
    "prestart": "npm run build",
    "start": "NODE_ENV=development functions-framework --target=relay",
    "test": "npm run test:local",
    "test:local": "./test-local-function.sh",
    "test:prod": "./test-deployed-function.sh prod",
    "test:staging": "./test-deployed-function.sh staging",
    "todo": "git ls-files -c --exclude-standard | grep -v \"package.json\" | xargs grep -n -i --color \"TODO:\\|FIXME:\""
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.2",
    "@google-cloud/logging-winston": "^6.0.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "env-schema": "^6.0.0",
    "viem": "^2.18.8",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@trunkio/launcher": "^1.3.1",
    "@types/eslint__js": "^8.42.3",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  }
}
